describe('Feedback Form Submission', () => {
  it('should successfully submit the form with valid data and display a success message', () => {
    cy.visit('/feedback-form');

    cy.get('input[name="name"]').type('John Doe');
    cy.get('input[name="email"]').type('johndoe@example.com');
    cy.get('input[name="phone"]').type('1234567890');
    cy.get('select[name="purpose"]').select('General Inquiry');
    cy.get('textarea[name="message"]').type('This is a test message for the feedback form.');

    cy.get('button[type="submit"]').click();

    cy.get('.success-message')
      .should('be.visible')
      .and('contain', 'Thank you for your feedback!');
  });
});
